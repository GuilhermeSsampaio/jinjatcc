import { Route, BrowserRouter, Routes } from "react-router-dom";
import LogarUsuario from "../paginas/usuario/logar_usuario";
import CadastrarUsuario from "../paginas/usuario/cadastrar_usuario";
import PaginaInicial from "../paginas/usuario/pagina_inicial";
import RotasUsuariosLogados from "./rotas_usuario_logado";
{% for e in entities -%}
{% if e.name_kebab != 'usuario' -%}
import Pagina{{ e.name_pascal }}Lista from "../paginas/{{ e.name_kebab }}/{{ e.name_kebab }}_lista";
import FormCadastro{{ e.name_pascal }} from "../componentes/FormCadastro{{ e.name_pascal }}";
{% endif -%}
{% endfor -%}

export default function Rotas() {
  return (
    <BrowserRouter>
      <Routes>
        <Route element={<LogarUsuario />} path="/" />
        <Route element={<CadastrarUsuario />} path="/criar-usuario" />
        
        {/* Rotas protegidas com sidebar */}
        <Route element={<RotasUsuariosLogados />}>
          <Route element={<PaginaInicial />} path="/pagina-inicial" />
          {% for e in entities -%}
          {% if e.name_kebab != 'usuario' -%}
          <Route element={<Pagina{{ e.name_pascal }}Lista />} path="/{{ e.plural_kebab }}" />
          <Route element={<FormCadastro{{ e.name_pascal }} />} path="/{{ e.plural_kebab }}/novo" />
          {% endif -%}
          {% endfor -%}
        </Route>
      </Routes>
    </BrowserRouter>
  );
}
