/* estilos utilitários customizados para navegação, cards, links, etc. */
.card {
  border-radius: 12px;
  background: #fff;
  box-shadow: 0 2px 8px rgba(44,62,80,0.08);
}
.no-underline {
  text-decoration: none;
}
.bg-bluegray-50 {
  background-color: #f8fafc;
}
.bg-bluegray-100 {
  background-color: #e4e9f7;
}
.hover\:bg-bluegray-200:hover {
  background-color: #cfd8e3;
}
.text-bluegray-800 {
  color: #2c3e50;
}
.text-bluegray-600 {
  color: #5c6e7c;
}
.text-center {
  text-align: center;
}
.font-bold {
  font-weight: bold;
}
.shadow-2 {
  box-shadow: 0 1px 4px rgba(44,62,80,0.10);
}
.shadow-4 {
  box-shadow: 0 2px 8px rgba(44,62,80,0.13);
}
.shadow-8 {
  box-shadow: 0 4px 16px rgba(44,62,80,0.16);
}
.p-3 {
  padding: 1rem;
}
.p-4 {
  padding: 1.5rem;
}
.m-4 {
  margin: 1.5rem;
}
.mb-3 {
  margin-bottom: 1rem;
}
.mb-4 {
  margin-bottom: 1.5rem;
}
.w-10 {
  width: 90%;
}
.md\:w-6 {
  width: 50%;
}
.lg\:w-4 {
  width: 33%;
}
.border-round {
  border-radius: 8px;
}
.flex {
  display: flex;
}
.flex-column {
  flex-direction: column;
}
.align-items-center {
  align-items: center;
}
.justify-content-center {
  justify-content: center;
}
.min-h-screen {
  min-height: 100vh;
}
.gap-3 {
  gap: 1rem;
}
